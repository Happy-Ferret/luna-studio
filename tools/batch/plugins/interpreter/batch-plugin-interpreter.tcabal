Name:               batch-plugin-interpreter
Version:            0.1
Cabal-Version:      >= 1.8
--License-file:       LICENSE
Author:             Flowbox <contact@flowbox.io>
Maintainer:         Flowbox <contact@flowbox.io>
Build-Type:         Simple

Flag Debug
    Description:    Enable debug support
    Default:        False


Library
    Hs-Source-Dirs: dist/gen
                    src
    Other-Modules:  Paths_batch_plugin_interpreter
    GHC-Options:    -Wall -O2 -threaded -fPIC
    Extensions:     NoImplicitPrelude

    Exposed-modules: `findmodules('src', '.*\.hs')`
                     `findmodules('dist/gen', '.*\.hs')`

    Build-Depends:  base,
                    batch-lib-project-manager,
                    batch-lib-project-manager-api,
                    bytestring,
                    containers,
                    either,
                    errors,
                    exceptions,
                    flowbox-batch,
                    flowbox-batch-protobuf,
                    flowbox-bus,
                    flowbox-config,
                    luna-core,
                    luna-distribution-old,
                    luna-initializer,
                    luna-interpreter,
                    luna-pass-old,
                    luna-protobuf-old,
                    luna-protobuf-old-gen,
                    flowbox-utils-old,
                    flowbox-serialization,
                    MissingH,
                    mmorph,
                    multiset,
                    mtl,
                    optparse-applicative,
                    pipes,
                    pipes-concurrency >= 2.0.3,
                    pipes-safe,
                    protocol-buffers,
                    protocol-buffers-descriptor,
                    transformers,
                    zeromq4-haskell >= 0.4

  if !os(windows)
    Build-Depends:  ekg


Executable interpreter
    Hs-Source-Dirs: dist/gen
                    src
    Other-Modules:  Paths_batch_plugin_interpreter
    Main-Is:        Main.hs

    GHC-Options:    -Wall -O2 -threaded -with-rtsopts=-T
    GHC-Prof-Options: -fprof-auto
                      "-with-rtsopts=-N -p -s -h -i0.1 -xc"
    Extensions:     NoImplicitPrelude

    Build-Depends:  base,
                    batch-lib-project-manager,
                    batch-lib-project-manager-api,
                    bytestring,
                    containers,
                    either,
                    errors,
                    exceptions,
                    flowbox-batch,
                    flowbox-batch-protobuf,
                    flowbox-bus,
                    flowbox-config,
                    luna-core,
                    luna-distribution-old,
                    luna-initializer,
                    luna-interpreter,
                    luna-pass-old,
                    luna-protobuf-old,
                    luna-protobuf-old-gen,
                    flowbox-utils-old,
                    flowbox-serialization,
                    MissingH,
                    mmorph,
                    multiset,
                    mtl,
                    optparse-applicative,
                    pipes,
                    pipes-concurrency,
                    pipes-safe,
                    protocol-buffers,
                    transformers,
                    zeromq4-haskell >= 0.4

  if !os(windows)
    Build-Depends:  ekg
