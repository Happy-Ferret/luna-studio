#ifdef GL_ES
precision highp float;
#endif

varying vec2 pos;
varying vec2 posUV;

void main() {
    pos   = vec2(uv.x, uv.y * 2.0 - 1.0);
    posUV = pos;
    vec2 posM = vec2(position.x, position.y);
    if (position.x < 0.0) {
        pos  = vec2(pos.x,  pos.y  / sqrt(4.0));
        posM = vec2(posM.x, posM.y / sqrt(4.0));
    }
    gl_Position = projectionMatrix * modelViewMatrix * vec4(posM, 0.0, 1.0);
}
