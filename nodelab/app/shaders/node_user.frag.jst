uniform int   colorId;

<%= require('shaders/stdlib')() %>

void main(void) {

    vec3 local   = vec3(luv * size, 0.0);
    vec3 ulocal  = local * dpr;
    vec2 p       = ulocal.xy - size / 2.0;

    if (objectMap == 1) discard;

    float nodeShape = sdf_ball(p, 5.0);
    vec3 color = hsv2rgb(vec3(float(colorId) / 1.5, 0.7, 1.0));
    gl_FragColor    = vec4(color, sdf_aa(nodeShape));

    if (gl_FragColor.a < 0.01) discard;
}
