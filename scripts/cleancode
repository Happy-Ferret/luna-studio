#!/usr/bin/python
import os.path
import sys
from subprocess import call, Popen, PIPE


libs  = []
execs = []

options       = set(['all', 'utils', 'lunalib', 'batchlib', 'batchsrv', 'lunac', 'luna', 'batch'])
opts_all      = options
opts_utils    = set(['all', 'utils'])
opts_lunalib  = set(['all', 'lunalib'])
opts_batchlib = set(['all', 'batchlib'])
opts_batchsrv = set(['all', 'batchsrv'])
opts_lunac    = set(['all', 'lunac'])
opts_luna     = set(['all', 'luna'])
opts_batch    = set([']all', 'batch'])


# class Library:
#     def __init__(self, name, path):
#         self.name = name
#         self.path = path
#         libs.append(self)


# class Executable:
#     def __init__(self, name, path):
#         self.name = name
#         self.path = path
#         execs.append(self)



# dir = os.path.join(os.path.dirname(os.path.realpath(__file__)), '..')
# p_luna     = os.path.join(dir, 'libs',  'luna')
# p_batch    = os.path.join(dir, 'libs',  'batch')
# p_batchsrv = os.path.join(dir, 'tools', 'batch-srv')
# p_lunac    = os.path.join(dir, 'tools', 'lunac')

# Library    ('lunalib' , os.path.join(dir, 'libs',  'luna'))
# Library    ('batchlib', os.path.join(dir, 'libs',  'batch'))
# Executable ('batchsrv', os.path.join(dir, 'tools', 'batch-srv'))
# Executable ('lunac'   , os.path.join(dir, 'tools', 'lunac'))

        

def wrong_use():
    print_usage()
    sys.exit()

def error():
    print "ERROR"
    sys.exit(1)

def print_usage():
    print "Usage: compile {%s}" % ", ".join(options)


def info(s):
    print
    print "=== %s ===" % s


def main():
    cmds = set(sys.argv[1:])
    if len(cmds) == 0: wrong_use()
    if not cmds <= options:
        diff = cmds - options
        print "Unrecognized options %s" % ", ".join(["'%s'" % opt for opt in diff])
        wrong_use()

    dir = os.path.join(os.path.dirname(os.path.realpath(__file__)), '..')
    p_utils    = os.path.join(dir, 'libs',  'utils')
    p_luna     = os.path.join(dir, 'libs',  'luna')
    p_batch    = os.path.join(dir, 'libs',  'batch')
    p_batchsrv = os.path.join(dir, 'tools', 'batch-srv')
    p_lunac    = os.path.join(dir, 'tools', 'lunac')


    if cmds & (opts_utils | opts_luna | opts_batch):
        info("Compiling utils library")
        if call(['cabal-dev', 'install', p_utils, '--force-reinstalls']): error()

    if cmds & (opts_lunalib | opts_luna | opts_batch):
        info("Compiling luna library")
        if call(['cabal-dev', 'install', p_luna, '--force-reinstalls']): error()

    if cmds & (opts_batchlib | opts_batch):
        info("Compiling batch library")
        if call(['cabal-dev', 'install', p_batch, '--force-reinstalls']): error()

    if cmds & (opts_batchsrv | opts_batch):
        info("Compiling batchsrv")
        if call(['cabal-dev', 'install', p_batchsrv, '--force-reinstalls']): error()

    if cmds & (opts_lunac | opts_luna):
        info("Compiling lunac")
        if call(['cabal-dev', 'install', p_lunac, '--force-reinstalls']): error()


main()